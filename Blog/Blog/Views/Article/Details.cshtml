@model Blog.Models.Article

@{
    ViewBag.Title = Model.Title;
}


<div class="panel panel-default">
    <div class="panel-body">
        <div class='col-md-8'>
                    <div class="col-sm-12">
                                <h2>
                                    @Model.Title
                                </h2>
                                <h4>
                                    <span class="label label-info">Author: @Model.Author.FullName</span>
                                    @Html.ActionLink("Edit", "Edit", "Article", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                                    @Html.ActionLink("Delete", "Delete", "Article", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
                                    @Html.ActionLink("Back", "Index", "Article", null, new { @class = "btn btn-default btn-xs" })
                                </h4>
                            <p>
                                @Model.Content
                            </p>
                        <div class="fb-comments" data-href="https://localhost:44340/Article/Details/@Model.Id" data-width="700" data-numposts="20"></div>
                    </div>
        </div> 
        <div class='col-md-4'>
            @Html.Partial("_SidebarPartial")
        </div>
    </div>
</div>
<hr />
